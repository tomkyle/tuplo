#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset
# set -o xtrace

__dir="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
__root="$(cd "$(dirname "${__dir}")" && pwd)"

TUPLO="${HOME}/.tuplo.yaml"

test -f "${TUPLO}" && exit 0

cp "${__root}/tuplo.dist.yaml" "${TUPLO}" && echo "Created ${TUPLO}"
exit $?


